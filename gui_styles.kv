WindowManager:
    MainScreen:
    Page1:
    Page2:
    ExProgressBar:
<MainScreen>:
    name: 'main_screen'
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			text: "main screen"
			font_size: 32

		Button:
			text: "page 1"
			font_size: 32
			on_release:
				app.root.current = "page1"
				root.manager.transition.direction = "left"
		Button:
			text: "page 2"
			font_size: 26
			on_release:
				app.root.current = "page2"
				root.manager.transition.direction = "left"
		Button:
			text: "page 3"
			font_size: 26
			on_release:
				app.root.current = "progress_bar"
				root.manager.transition.direction = "left"
<Page1>:
    name: "page1"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Page 1"
        ScrollView:
            MDList:
                id: card_container
        Button:
            text: "back"
            on_release: app.root.current = "main_screen"
<Page2>:
    name: "page2"
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Page 2"
        ScrollView:
            MDList:
                id: list_container
        Button:
            text: "back"
            on_release: app.root.current = "main_screen"
<MD3Card>
    padding: 4
    size_hint: None, None
    size: "200dp", "100dp"

    MDRelativeLayout:

        MDIconButton:
            icon: "dots-vertical"
            pos_hint: {"top": 1, "right": 1}

        MDLabel:
            id: label
            text: root.text
            adaptive_size: True
            color: "grey"
            pos: "12dp", "12dp"
            bold: True
<ExProgressBar>
    name: "progress_bar"
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Label:
			id: my_label
			text: "0% Progress"

		ProgressBar:
			id: my_progress_bar
			# Set Default Value
			# value: .25
			min: 0
			max: 1
			pos_hint: {'x':.1}
			size_hint_x: .8

		Button:
			text: "Press Me!"
			on_press: root.press_it()
		Button:
			text: "Go Back"
			font_size: 32
			on_release:
				app.root.current = "main_screen"
				root.manager.transition.direction = "right"